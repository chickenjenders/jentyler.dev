---
// Supports weights 100-900
import "@fontsource-variable/noto-serif-display";
// Supports weights 400-900
import "@fontsource-variable/playfair-display";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script
      async
      src="http://sim-analytics.duckdns.org/script.js"
      data-website-id="05abea98-abd4-4472-9226-536d5c04db01"></script>
    <ViewTransitions fallback="swap" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  root {
    --cream: #faf9f6;
  }

  html {
    background-color: var(--cream);
    font-family: "Playfair Display Variable", "Times New Roman", Times, serif;
  }
  .pushable {
    font-family: inherit;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
